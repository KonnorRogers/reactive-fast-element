{
  "name": "fast-element-reactive-controller",
  "version": "0.0.1",
  "source": "src/index.ts",
  "main": "./dist/fast-element-reactive-controller.js",
  "module": "./dist/fast-element-reactive-controller.module.js",
  "unpkg": "./dist/fast-element-reactive-controller.umd.js",
  "types": "./dist/fast-element-reactive-controller.d.ts",
  "exports": {
    ".": "./dist/index.modern.js"
  },
  "type": "module",
  "license": "MIT",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "clean": "rm -rf dist/",
    "lint": "ts-standard src/ test/ ",
    "fix": "ts-standard src/ test/ --fix",
    "test": "pnpm run fix && web-test-runner",
    "test:watch": "web-test-runner --watch",
    "start": "web-dev-server",
    "start:watch": "web-dev-server --watch",
    "build": "pnpm run clean && rollup -c",
    "build:watch": "pnpm run clean && rollup -wc",
    "changelog": "standard-changelog",
    "deploy": "standard-version",
    "deploy:beta": "pnpm run deploy --prerelease beta && pnpm run push",
    "deploy:patch": "pnpm run deploy --release-as patch && pnpm run push",
    "deploy:minor": "pnpm run deploy --release-as minor && pnpm run push",
    "deploy:major": "pnpm run deploy --release-as major && pnpm run push",
    "push": "git push --follow-tags origin main && pnpm run publish"
  },
  "dependencies": {
    "@microsoft/fast-element": "^1.6.2",
    "rollup": "^2.60.2"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@open-wc/testing": "^3.0.3",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/sinon": "^10.0.6",
    "@types/sinon-chai": "^3.2.6",
    "@web/dev-server": "^0.1.28",
    "@web/dev-server-esbuild": "^0.2.16",
    "@web/rollup-plugin-html": "^1.10.1",
    "@web/test-runner": "^0.13.22",
    "@web/test-runner-playwright": "^0.8.8",
    "playwright": "^1.17.1",
    "rollup-plugin-gzip": "^3.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "sinon": "^12.0.1",
    "standard-version": "^9.3.2",
    "ts-standard": "^11.0.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.2",
    "zlib": "^1.0.5"
  },
  "ts-standard": {
    "ignore": [
      "dist"
    ]
  },
  "customElements": "custom-elements.json"
}
